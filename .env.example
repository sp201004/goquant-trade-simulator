# GoQuant Trade Simulator Environment Variables
# Copy this file to .env and update with your values

# Server Configuration
GOQUANT_ENV=production
GOQUANT_HOST=0.0.0.0
GOQUANT_PORT=8080
GOQUANT_LOG_LEVEL=INFO

# WebSocket Configuration
WEBSOCKET_URL=wss://ws.gomarket-cpp.goquant.io/ws/l2-orderbook/okx/BTC-USDT-SWAP
WEBSOCKET_RECONNECT_INTERVAL=5
WEBSOCKET_MAX_RECONNECT_ATTEMPTS=10

# Security (for production)
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1,*.railway.app,*.render.com,*.herokuapp.com

# Optional: Database URLs for future use
# DATABASE_URL=postgresql://user:password@localhost:5432/goquant
